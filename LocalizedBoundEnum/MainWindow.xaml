<Window x:Class="LocalizedBoundEnum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalizedBoundEnum"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Localized Bound Enum" Height="250" Width="400">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Label Content="Select an option:"/>
        <ComboBox ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:Options}}}"/>
    </StackPanel>
</Window>
